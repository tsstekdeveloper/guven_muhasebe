<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- E-Invoice list View -->
    <record id="view_e_invoice_list" model="ir.ui.view">
        <field name="name">e.invoice.list</field>
        <field name="model">e.invoice</field>
        <field name="arch" type="xml">
            <list string="E-Faturalar" default_order="issue_date, invoice_id">
                <field name="is_cancellation" invisible="1"/>
                <field name="invoice_id" optional="show" decoration-danger="is_cancellation == True"/>
                <field name="issue_date" optional="show"/>
                <field name="supplier" optional="show"/>
                <field name="customer" optional="show"/>
                <field name="payable_amount" sum="Total" optional="show"/>
                <field name="direction" optional="show"/>
                <field name="kaynak" optional="show"/>
                <field name="status_detail" optional="show"/>
                <field name="response_code" optional="hide"/>
                <field name="gvn_active" optional="show"/>
                <field name="is_locked" widget="boolean_toggle" optional="show"/>
            </list>
        </field>
    </record>

    <!-- E-Invoice Form View -->
    <record id="view_e_invoice_form" model="ir.ui.view">
        <field name="name">e.invoice.form</field>
        <field name="model">e.invoice</field>
        <field name="arch" type="xml">
            <form string="E-Fatura">
                <header>
                    <!-- Kilit Mekanizması Butonları (v1.0.5) -->
                    <button name="action_lock"
                            type="object"
                            string="Kilitle"
                            class="btn-warning"
                            invisible="is_locked"/>
                    <button name="action_unlock"
                            type="object"
                            string="Kilidi Kaldır"
                            class="btn-success"
                            invisible="not is_locked"/>
                </header>
                <sheet>
<!--                     <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="invoice_id" readonly="1"/>
                        </h1>
                    </div> -->
                    <group>
                        <group name="main_info" string="Ana Bilgiler" readonly="is_locked">
                            <field name="uuid" readonly="1"/>
                            <field name="direction"/>
                            <field name="kaynak"/>
                            <field name="issue_date"/>
                            <field name="create_date_ws"/>
                            <field name="invoice_type_code"/>
                            <field name="profile_id"/>
                            <!-- E-Arşiv Özel Alanları -->
                            <field name="currency_code" readonly="1" invisible="kaynak != 'e-arsiv'"/>
                            <field name="reported" readonly="1" invisible="kaynak != 'e-arsiv'"/>
                            <field name="earchive_type" readonly="1" invisible="kaynak != 'e-arsiv'"/>
                            <field name="sending_type" readonly="1" invisible="kaynak != 'e-arsiv'"/>
                            <!-- İptal İlişkisi (v1.0.7) -->
                            <field name="is_cancellation" readonly="1" invisible="kaynak != 'e-arsiv'"/>
                            <field name="cancelled_invoice_id" readonly="1" invisible="is_cancellation == False" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group name="status_info" string="Durum Bilgileri" readonly="is_locked">
                            <field name="status_detail"/>
                            <field name="status"/>
                            <field name="status_description"/>
                            <field name="status_code"/>
                            <field name="response_code"/>
                            <field name="response_description"/>
                            <field name="gib_status_code"/>
                            <field name="gib_status_description"/>
                        </group>
                    </group>
                    <group>
                        <group name="sender_info" string="Gönderen/Alıcı" readonly="is_locked">
                            <field name="sender"/>
                            <field name="receiver"/>
                            <field name="supplier"/>
                            <field name="customer"/>
                            <field name="from_field"/>
                            <field name="to_field"/>
                        </group>
                        <group name="financial_info" string="Finansal Bilgiler" readonly="is_locked">
                            <field name="payable_amount"/>
                            <field name="tax_exclusive_total_amount"/>
                            <field name="tax_inclusive_total_amount"/>
                            <field name="allowance_total_amount"/>
                            <field name="line_extension_amount"/>
                        </group>
                    </group>
                    <group name="other_info" string="Diğer Bilgiler" readonly="is_locked">
                        <field name="envelope_identifier"/>
                    </group>
                    <!-- Kilit Bilgileri (v1.0.5) -->
                    <group name="lock_info" string="Kilit Bilgileri" invisible="not is_locked">
                        <group>
                            <field name="is_locked" widget="boolean_toggle"/>
                            <field name="locked_by_id"/>
                        </group>
                        <group>
                            <field name="locked_date"/>
                            <field name="lock_reason"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notlar">
                            <field name="notes" placeholder="Fatura ile ilgili notlarınızı buraya yazabilirsiniz..." readonly="is_locked"/>
                        </page>
                        <page string="İptal Kayıtları" invisible="is_cancellation == True or kaynak != 'e-arsiv'">
                            <group>
                                <field name="cancellation_ids" nolabel="1">
                                    <list string="İptal Kayıtları" create="0" delete="0">
                                        <field name="invoice_id"/>
                                        <field name="uuid"/>
                                        <field name="issue_date"/>
                                        <field name="profile_id"/>
                                        <field name="status_detail"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
<!--                 <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- E-Invoice Search View -->
    <record id="view_e_invoice_search" model="ir.ui.view">
        <field name="name">e.invoice.search</field>
        <field name="model">e.invoice</field>
        <field name="arch" type="xml">
            <search string="E-Fatura Ara">
                <field name="invoice_id"/>
                <field name="uuid"/>
                <field name="sender"/>
                <field name="receiver"/>
                <field name="customer"/>
                <field name="supplier"/>
                <field name="kaynak"/>
                <field name="response_code"/>
                <separator/>
                <filter string="Gelen Faturalar" name="incoming" domain="[('direction', '=', 'IN')]"/>
                <filter string="Giden Faturalar" name="outgoing" domain="[('direction', '=', 'OUT')]"/>
                <separator/>
                <filter string="E-Fatura" name="kaynak_efatura" domain="[('kaynak', '=', 'e-fatura')]"/>
                <filter string="E-Arşiv" name="kaynak_earsiv" domain="[('kaynak', '=', 'e-arsiv')]"/>
                <filter string="E-İrsaliye" name="kaynak_eirsaliye" domain="[('kaynak', '=', 'e-irsaliye')]"/>
                <separator/>
                <filter string="Yanıt Bekleyen" name="waiting_response" domain="[('response_code', '=', False)]"/>
                <filter string="Kabul Edilmiş" name="accepted" domain="[('response_code', '!=', False)]"/>
                <separator/>
                <filter string="Geçerli Faturalar" name="gvn_active" domain="[('gvn_active', '=', True)]"/>
                <filter string="Geçerli Olmayan Faturalar" name="gvn_pasive" domain="[('gvn_active', '=', False)]"/>
                <separator/>
                <filter string="Kilitli Kayıtlar" name="locked" domain="[('is_locked', '=', True)]"/>
                <filter string="Kilitsiz Kayıtlar" name="unlocked" domain="[('is_locked', '=', False)]"/>
                <separator/>
                <filter string="Bu Ay" name="this_month"
                        domain="[('issue_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('issue_date', '&lt;', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Geçen Ay" name="last_month"
                        domain="[('issue_date', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                ('issue_date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Grupla">
                    <filter string="Yön" name="group_direction" context="{'group_by': 'direction'}"/>
                    <filter string="Kaynak" name="group_kaynak" context="{'group_by': 'kaynak'}"/>
                    <filter string="Durum Detayı" name="group_status" context="{'group_by': 'status_detail'}"/>
                    <filter string="Fatura Tarihi" name="group_issue_date" context="{'group_by': 'issue_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- E-Invoice Action -->
    <record id="action_e_invoice" model="ir.actions.act_window">
        <field name="name">E-Faturalar</field>
        <field name="res_model">e.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_gvn_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz e-fatura kaydı bulunmuyor!
            </p>
            <p>
                E-fatura kayıtları SOAP servisi üzerinden otomatik olarak senkronize edilir.
                Senkronizasyon için "Senkronizasyon" menüsünü kullanabilirsiniz.
            </p>
        </field>
    </record>

    <!-- Sync Wizard Views -->
    <record id="view_e_invoice_sync_wizard_form" model="ir.ui.view">
        <field name="name">e.invoice.sync.wizard.form</field>
        <field name="model">e.invoice.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="E-Fatura/E-Arşiv Senkronizasyonu">
                <group>
                    <group>
                        <field name="invoice_source" widget="radio"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <!-- Direction sadece E-Fatura seçilince görünsün -->
                        <field name="direction" invisible="invoice_source == 'e-arsiv'"/>
                    </group>
                </group>
                <footer>
                    <button name="action_sync" string="Senkronize Et" type="object" class="btn-primary"/>
                    <button string="İptal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_e_invoice_sync_wizard" model="ir.actions.act_window">
        <field name="name">E-Fatura Senkronizasyonu</field>
        <field name="res_model">e.invoice.sync.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>