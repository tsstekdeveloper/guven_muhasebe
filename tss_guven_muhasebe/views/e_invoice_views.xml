    <!-- E-Invoice Form View (v2.0 - Restructured) -->
    <record id="view_e_invoice_form" model="ir.ui.view">
        <field name="name">e.invoice.form</field>
        <field name="model">e.invoice</field>
        <field name="arch" type="xml">
            <form string="E-Fatura">
                <header>
                    <!-- Kilit Mekanizması Butonları -->
                    <button name="action_lock"
                            type="object"
                            string="Kilitle"
                            class="btn-warning"
                            invisible="is_locked"/>
                    <button name="action_unlock"
                            type="object"
                            string="Kilidi Kaldır"
                            class="btn-success"
                            invisible="not is_locked"/>
                </header>
                <sheet>
                    <!-- === HEADER BİLGİLERİ === -->
                    <div class="oe_title">
                        <h1>
                            <field name="invoice_id" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="issue_date" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="gvn_active" widget="boolean_toggle"/>
                            <field name="exists_in_logo" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="odenecek_tutar_tl" readonly="1" widget="monetary" options="{'currency_field': 'currency_code'}"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- === TAB 1: ANA BİLGİLER === -->
                        <page string="Ana Bilgiler" name="ana_bilgiler">
                            <group>
                                <group string="Kimlik Bilgileri" readonly="is_locked">
                                    <field name="uuid" readonly="1"/>
                                    <field name="invoice_id" readonly="1"/>
                                    <field name="issue_date" readonly="1"/>
                                    <field name="kaynak"/>
                                    <field name="direction"/>
                                </group>
                                <group string="Taraflar" readonly="is_locked">
                                    <field name="supplier"/>
                                    <field name="customer"/>
                                    <field name="sender"/>
                                    <field name="receiver"/>
                                </group>
                            </group>
                            <group>
                                <group string="Finansal Bilgiler" readonly="is_locked">
                                    <field name="birim"/>
                                    <field name="kur"/>
                                    <field name="odenecek_tutar"/>
                                    <field name="odenecek_tutar_tl"/>
                                    <field name="matrah"/>
                                    <field name="matrah_tl"/>
                                </group>
                                <group string="Fatura Durumu" readonly="is_locked">
                                    <field name="ft_tip"/>
                                    <field name="ft_durum"/>
                                    <field name="harici_iptal" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>

                        <!-- === TAB 2: GİB DURUM BİLGİLERİ === -->
                        <page string="GİB Durum Bilgileri" name="gib_durum">
                            <group>
                                <group string="Fatura Profil Bilgileri" readonly="is_locked">
                                    <field name="profile_id"/>
                                    <field name="invoice_type_code"/>
                                </group>
                                <group string="Durum Kodları" readonly="is_locked">
                                    <field name="status"/>
                                    <field name="status_description"/>
                                    <field name="status_code"/>
                                    <field name="status_detail"/>
                                </group>
                            </group>
                            <group>
                                <group string="GİB Durum" readonly="is_locked">
                                    <field name="gib_status_code"/>
                                    <field name="gib_status_description"/>
                                </group>
                                <group string="Yanıt Bilgileri" readonly="is_locked">
                                    <field name="response_code"/>
                                    <field name="response_description"/>
                                </group>
                            </group>
                        </page>

                        <!-- === TAB 3: NOTLAR ve KİLİT === -->
                        <page string="Notlar ve Kilit" name="notlar_kilit">
                            <group>
                                <group string="Kilit Bilgileri">
                                    <field name="is_locked" widget="boolean_toggle"/>
                                    <field name="locked_by_id" readonly="1"/>
                                    <field name="locked_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="lock_reason" nolabel="1" placeholder="Kilitleme nedeni..."/>
                                </group>
                            </group>
                            <group string="Notlar">
                                <field name="notes" nolabel="1" placeholder="Fatura notları..." readonly="is_locked"/>
                            </group>
                        </page>

                        <!-- === TAB 4: KDV DETAYLARI === -->
                        <page string="KDV Detayları" name="kdv_detaylari">
                            <notebook>
                                <!-- === TAB 4-1: KDV Toplamları === -->
                                <page string="KDV Toplamları" name="kdv_toplamlar">
                                    <group>
                                        <group string="Toplam KDV" readonly="is_locked">
                                            <field name="toplam_kdv"/>
                                            <field name="toplam_kdv_tl"/>
                                        </group>
                                        <group string="Toplam Vergi" readonly="is_locked">
                                            <field name="toplam_vergi"/>
                                        </group>
                                    </group>
                                </page>

                                <!-- === TAB 4-2: KDV %1 === -->
                                <page string="KDV %1" name="kdv_1">
                                    <group>
                                        <group string="Matrah" readonly="is_locked">
                                            <field name="kdv_1_matrah"/>
                                            <field name="kdv_1_matrah_tl"/>
                                        </group>
                                        <group string="KDV Tutarı" readonly="is_locked">
                                            <field name="kdv_1"/>
                                            <field name="kdv_1_tl"/>
                                        </group>
                                    </group>
                                </page>

                                <!-- === TAB 4-3: KDV %10 === -->
                                <page string="KDV %10" name="kdv_10">
                                    <group>
                                        <group string="Matrah" readonly="is_locked">
                                            <field name="kdv_10_matrah"/>
                                            <field name="kdv_10_matrah_tl"/>
                                        </group>
                                        <group string="KDV Tutarı" readonly="is_locked">
                                            <field name="kdv_10"/>
                                            <field name="kdv_10_tl"/>
                                        </group>
                                    </group>
                                </page>

                                <!-- === TAB 4-4: KDV %20 === -->
                                <page string="KDV %20" name="kdv_20">
                                    <group>
                                        <group string="Matrah" readonly="is_locked">
                                            <field name="kdv_20_matrah"/>
                                            <field name="kdv_20_matrah_tl"/>
                                        </group>
                                        <group string="KDV Tutarı" readonly="is_locked">
                                            <field name="kdv_20"/>
                                            <field name="kdv_20_tl"/>
                                        </group>
                                    </group>
                                </page>
                            </notebook>
                        </page>

                        <!-- === TAB 5: TEVKİFAT === -->
                        <page string="Tevkifat" name="tevkifat">
                            <group string="Tevkifat Bilgileri" readonly="is_locked">
                                <field name="tevkifat_kodu"/>
                                <field name="tevkifat_aciklamasi"/>
                            </group>
                            <group>
                                <group string="2/10 Tevkifat" readonly="is_locked">
                                    <field name="tevkifat_2_10_matrah"/>
                                    <field name="tevkifat_2_10_kdv"/>
                                </group>
                                <group string="3/10 Tevkifat" readonly="is_locked">
                                    <field name="tevkifat_3_10_matrah"/>
                                    <field name="tevkifat_3_10_kdv"/>
                                </group>
                            </group>
                            <group>
                                <group string="4/10 Tevkifat" readonly="is_locked">
                                    <field name="tevkifat_4_10_matrah"/>
                                    <field name="tevkifat_4_10_kdv"/>
                                </group>
                                <group string="5/10 Tevkifat" readonly="is_locked">
                                    <field name="tevkifat_5_10_matrah"/>
                                    <field name="tevkifat_5_10_kdv"/>
                                </group>
                            </group>
                            <group>
                                <group string="7/10 Tevkifat" readonly="is_locked">
                                    <field name="tevkifat_7_10_matrah"/>
                                    <field name="tevkifat_7_10_kdv"/>
                                </group>
                                <group string="9/10 Tevkifat" readonly="is_locked">
                                    <field name="tevkifat_9_10_matrah"/>
                                    <field name="tevkifat_9_10_kdv"/>
                                </group>
                            </group>
                        </page>

                        <!-- === TAB 6: STOPAJ ve KONAKLAMA VERGİSİ === -->
                        <page string="Stopaj ve Konaklama Vergisi" name="stopaj_konaklama">
                            <group>
                                <group string="Stopaj" readonly="is_locked">
                                    <field name="stopaj_tutari"/>
                                    <field name="stopaj_tutari_matrah"/>
                                    <field name="stopaj_tutari_tl"/>
                                </group>
                                <group string="Konaklama Vergisi (%2)" readonly="is_locked">
                                    <field name="konaklama_vergisi_2"/>
                                    <field name="konaklama_vergisi_2_matrah"/>
                                    <field name="konaklama_vergisi_2_tl"/>
                                    <field name="konaklama_vergisi_2_tl_matrah"/>
                                </group>
                            </group>
                        </page>

                        <!-- === TAB 7: DİĞER BİLGİLER === -->
                        <page string="Diğer Bilgiler" name="diger_bilgiler">
                            <notebook>
                                <!-- === TAB 7-1: İSKONTO BİLGİLERİ === -->
                                <page string="İskonto Bilgileri" name="iskonto_bilgileri">
                                    <group>
                                        <group string="İskonto" readonly="is_locked">
                                            <field name="iskonto_tutari"/>
                                            <field name="iskonto_tutari_tl"/>
                                        </group>
                                        <group string="Vergi Muafiyeti" readonly="is_locked">
                                            <field name="vergi_muafiyet_kodu"/>
                                            <field name="vergi_muafiyet_sebebi"/>
                                        </group>
                                    </group>
                                </page>

                                <!-- === TAB 7-2: EXCEL TAKİBİ === -->
                                <page string="Excel Takibi" name="excel_takibi">
                                    <group string="Excel Import Bilgileri">
                                        <group>
                                            <field name="excel_imported" widget="boolean_toggle" readonly="1"/>
                                            <field name="excel_import_date" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="excel_import_user_id" readonly="1"/>
                                        </group>
                                    </group>
                                </page>

                                <!-- === TAB 7-3: İPTAL İLİŞKİSİ === -->
                                <page string="İptal İlişkisi" name="iptal_iliskisi">
                                    <group>
                                        <group>
                                            <field name="is_cancellation" readonly="1"/>
                                            <field name="cancelled_invoice_id" readonly="1" options="{'no_create': True, 'no_create_edit': True}"/>
                                        </group>
                                        <group>
                                            <field name="cancellation_ids" nolabel="1">
                                                <list string="İptal Kayıtları" create="0" delete="0">
                                                    <field name="invoice_id"/>
                                                    <field name="uuid"/>
                                                    <field name="issue_date"/>
                                                    <field name="status_detail"/>
                                                </list>
                                            </field>
                                        </group>
                                    </group>
                                </page>
                            </notebook>
                        </page>
                    </notebook>
                </sheet>
<!--                 <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- E-Invoice Search View -->
    <record id="view_e_invoice_search" model="ir.ui.view">
        <field name="name">e.invoice.search</field>
        <field name="model">e.invoice</field>
        <field name="arch" type="xml">
            <search string="E-Fatura Ara">
                <field name="invoice_id"/>
                <field name="uuid"/>
                <field name="sender"/>
                <field name="receiver"/>
                <field name="customer"/>
                <field name="supplier"/>
                <field name="kaynak"/>
                <field name="response_code"/>
                <separator/>
                <filter string="Gelen Faturalar" name="incoming" domain="[('direction', '=', 'IN')]"/>
                <filter string="Giden Faturalar" name="outgoing" domain="[('direction', '=', 'OUT')]"/>
                <separator/>
                <filter string="E-Fatura" name="kaynak_efatura" domain="[('kaynak', '=', 'e-fatura')]"/>
                <filter string="E-Arşiv" name="kaynak_earsiv" domain="[('kaynak', '=', 'e-arsiv')]"/>
                <filter string="E-İrsaliye" name="kaynak_eirsaliye" domain="[('kaynak', '=', 'e-irsaliye')]"/>
                <separator/>
                <filter string="Yanıt Bekleyen" name="waiting_response" domain="[('response_code', '=', False)]"/>
                <filter string="Kabul Edilmiş" name="accepted" domain="[('response_code', '!=', False)]"/>
                <separator/>
                <filter string="Geçerli Faturalar" name="gvn_active" domain="[('gvn_active', '=', True)]"/>
                <filter string="Geçerli Olmayan Faturalar" name="gvn_pasive" domain="[('gvn_active', '=', False)]"/>
                <separator/>
                <filter string="Kilitli Kayıtlar" name="locked" domain="[('is_locked', '=', True)]"/>
                <filter string="Kilitsiz Kayıtlar" name="unlocked" domain="[('is_locked', '=', False)]"/>
                <separator/>
                <filter string="Bu Ay" name="this_month"
                        domain="[('issue_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('issue_date', '&lt;', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Geçen Ay" name="last_month"
                        domain="[('issue_date', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                ('issue_date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Grupla">
                    <filter string="Yön" name="group_direction" context="{'group_by': 'direction'}"/>
                    <filter string="Kaynak" name="group_kaynak" context="{'group_by': 'kaynak'}"/>
                    <filter string="Durum Detayı" name="group_status" context="{'group_by': 'status_detail'}"/>
                    <filter string="Fatura Tarihi" name="group_issue_date" context="{'group_by': 'issue_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- E-Invoice Action -->
    <record id="action_e_invoice" model="ir.actions.act_window">
        <field name="name">E-Faturalar</field>
        <field name="res_model">e.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_e_invoice_list_v3"/>
        <field name="context">{'search_default_gvn_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz e-fatura kaydı bulunmuyor!
            </p>
            <p>
                E-fatura kayıtları SOAP servisi üzerinden otomatik olarak senkronize edilir.
                Senkronizasyon için "Senkronizasyon" menüsünü kullanabilirsiniz.
            </p>
        </field>
    </record>

    <!-- Sync Wizard Views -->
    <record id="view_e_invoice_sync_wizard_form" model="ir.ui.view">
        <field name="name">e.invoice.sync.wizard.form</field>
        <field name="model">e.invoice.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="E-Fatura/E-Arşiv Senkronizasyonu">
                <group>
                    <group>
                        <field name="invoice_source" widget="radio"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <!-- Direction sadece E-Fatura seçilince görünsün -->
                        <field name="direction" invisible="invoice_source == 'e-arsiv'"/>
                    </group>
                </group>
                <footer>
                    <button name="action_sync" string="Senkronize Et" type="object" class="btn-primary"/>
                    <button string="İptal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_e_invoice_sync_wizard" model="ir.actions.act_window">
        <field name="name">E-Fatura Senkronizasyonu</field>
        <field name="res_model">e.invoice.sync.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Server Action: Faturayı İptal'e Çek ve Kilitle -->
    <record id="server_action_cancel_and_lock" model="ir.actions.server">
        <field name="name">Faturayı İptal'e Çek ve Kilitle</field>
        <field name="model_id" ref="model_e_invoice"/>
        <field name="binding_model_id" ref="model_e_invoice"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_cancel_and_lock()
        </field>
    </record>
</odoo>